@model MVC_Start.Models.ProgramData


<!DOCTYPE HTML>
<html>
<head>
    <title>Elements - Theory by TEMPLATED</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/main.css" />
</head>
<body class="subpage">

    <!-- Header -->
    <header id="header">
        <div class="inner" style="font-weight:bold;font-size:x-large">
            <nav id="nav">
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a asp-area="" asp-controller="Home" asp-action="Searchuniv">Search Univ</a>
                <a asp-area="" asp-controller="Home" asp-action="Aboutus">About Us</a>
            </nav>
            <a href="#navPanel" class="navPanelToggle"><span class="fa fa-bars"></span></a>
        </div>
    </header>

    <!-- Main -->
    <section id="main" class="wrapper">
        <div class="inner">
            <header class="align-center">
                <h2>Update</h2>
                <p>Update the Academic Programs for an Instition </p>
            </header>

            <hr class="major" />

            <form method="post" asp-controller="Home" asp-action="Update">
                <div class="row uniform table-wrapper">

                    <div class="6u 12u$(xsmall)">
                        <div class="wrapper">

                        </div>
                    </div>
                    <!-- Break -->
                        <div class="12u$"
                        <label for="Programs">Program Name</label>

                        <input placeholder="Program Name" asp-for="title" type="text" class="validate">

                        <span asp-validation-for="title" class="red-text"></span>


                    </div>


                        <div class="12u$">
                            <ul class="actions">

                                <button class="btn waves-effect waves-light" type="submit" name="action:Update">Confirm Edit</button>
                                <li><input type="reset" value="Reset" class="alt" /></li>
                            </ul>
                        </div>
                    </div>
            </form>

            <hr />

        </div>
        </div>

        </div>
    </section>

    <footer id="footer">
        <div class="inner">
            <div class="flex">
                <div class="copyright">
                    &copy; USF <a>GROUP 4</a>

                </div>
            </div>
        </div>
    </footer>


    <!-- Scripts -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/skel.min.js"></script>
    <script src="/js/util.js"></script>
    <script src="/js/main.js"></script>

</body>
</html>

